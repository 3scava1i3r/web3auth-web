{
  "compilerOptions": {
    "strict": false,
    "module": "esnext",
    "target": "es6",
    "lib": ["ES2020", "DOM"],
    "sourceMap": true,
    "esModuleInterop": true,
    "noImplicitThis": true,
    "declaration": true,
    "declarationDir": "./types",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@web3auth/*": ["packages/wallets/*/src","packages/*/src"],
      "@web3auth/ethereum-provider": ["packages/providers/eth-provider/src"],
      "@web3auth/solana-provider": ["packages/providers/solana-provider/src"]
    }
  }
}
