{
  "root": true,
  "extends": [
    "@toruslabs/eslint-config-typescript"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 11,
    "project": "./tsconfig.json"
  },
  "rules": {
    "@typescript-eslint/no-throw-literal": 0
  },
  "env": {
    "es2020": true,
    "browser": true,
    "node": true,
    "serviceworker": true
  }
}
