{
  "name": "web3auth",
  "private": true,
  "description": "Monorepo for web3 auth packages",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "publish:lerna": "yarn clean && yarn bootstrap && lerna publish",
    "just:publish:lerna": "lerna publish",
    "clean": "lerna clean --yes && lerna exec -- rimraf package-lock.json .rollup.cache/ tsconfig.build.tsbuildinfo yarn.lock dist/ .rts2_cache_{cjs,esm}/ web3Auth-*.tgz .eslintcache",
    "build": "lerna run build",
    "dev": "lerna run dev",
    "test": "lerna run test --parallel",
    "test-debugger": "lerna run test-debugger --parallel",
    "lint": "lerna run lint --parallel",
    "pack:lerna": "lerna exec --since HEAD -- 'yarn pack'",
    "pre-commit": "lerna run pre-commit",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@toruslabs/eslint-config-typescript": "^0.0.11",
    "@toruslabs/torus-scripts": "^0.0.11",
    "@types/node": "14",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.1.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-mocha": "^9.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "eslint-webpack-plugin": "^2.5.4",
    "husky": "^7.0.2",
    "lerna": "^4.0.0",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.3.0",
    "tsconfig-paths": "^3.11.0",
    "tsconfig-paths-webpack-plugin": "^3.5.1",
    "tslib": "^2.3.1",
    "typescript": "^4.4.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Web3Auth/Web3Auth.git"
  },
  "keywords": [
    "web3",
    "ethereum",
    "solana",
    "wallet",
    "aggregator",
    "authentication",
    "login",
    "blockchain",
    "key management"
  ],
  "lint-staged": {
    "*": "lerna run --concurrency 1 --stream --since HEAD --exclude-dependents pre-commit -- "
  },
  "author": "Torus Labs",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Web3Auth/Web3Auth/issues"
  },
  "homepage": "https://github.com/Web3Auth/Web3Auth#readme",
  "engines": {
    "node": ">=14.17.0",
    "npm": ">=6.x"
  }
}
